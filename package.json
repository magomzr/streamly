{
  "name": "streamly",
  "version": "0.0.8",
  "private": true,
  "description": "A lightweight automation engine for building and running modular workflows",
  "author": {
    "name": "Mario GÃ³mez",
    "email": "mariogomezarr@gmail.com"
  },
  "license": "MIT",
  "scripts": {
    "dev:api": "pnpm --filter api dev",
    "dev:web": "pnpm --filter web dev",
    "dev": "concurrently \"pnpm dev:api\" \"pnpm dev:web\" --names \"API,WEB\" --prefix-colors \"blue,magenta\"",
    "build:api": "pnpm --filter api build",
    "build:web": "pnpm --filter web build",
    "build": "pnpm -r build",
    "test:api": "pnpm --filter api test",
    "test:web": "pnpm --filter web test",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "prettier": "^3.4.2"
  }
}